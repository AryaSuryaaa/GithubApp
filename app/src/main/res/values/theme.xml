<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.GithubApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_200</item>
        <item name="colorPrimaryVariant">@color/dark_blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/zeus</item>
        <item name="colorSecondaryVariant">@color/zeus</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status & Navigation bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="ImageLogo">
        <item name="android:src">@drawable/github_logo_black</item>
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="contentDescription">@string/github_logo</item>
    </style>
</resources>